<h1>Cadastrar Novo Fornecedor</h1>

<form action="/fornecedores" method="POST">
    <div class="form-group">
        <label>Fornecedor(a):</label>
        <input type="text" name="fornecedor" class="form-control" required>
    </div>
    <div class="form-group">
        <label>Descrição:</label>
        <input type="text" name="descricao" class="form-control" required>
    </div>
    <div class="form-group">
        <label>Produto:</label>
        <input type="text" name="produto" class="form-control" required>
    </div>
    <div class="form-group">
        <label>Data:</label>
        <input type="date" name="data_fornecedor" class="form-control" required>
    </div>
    <div class="form-group">
        <label>Horário:</label>
        <input type="time" name="horario" class="form-control" required>
    </div>
       
    <button type="submit" class="btn btn-success">Salvar</button>
    <a href="/fornecedores" class="btn btn-secondary">Cancelar</a>
</form>